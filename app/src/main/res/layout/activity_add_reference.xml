<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carl.stockit.Persistance.addReferenceActivity"
    android:clickable="true">

    <TextView
        android:id="@+id/textView_AjoutReference"
        android:layout_width="282dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_row="0"
        android:layout_x="0dp"
        android:layout_y="26dp"
        android:text="@string/ajout_reference"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp" />

    <EditText android:id="@+id/input_nomReference"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="Nom Reference"
        android:layout_x="0dp"
        android:layout_y="85dp" />

    <EditText
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/codeBarre"
        android:layout_x="0dp"
        android:layout_y="126dp"
        android:hint="Code barre" />

    <EditText
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/categorie"
        android:layout_x="0dp"
        android:layout_y="164dp"
        android:hint="Categorie" />

    <EditText
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/URLPhoto"
        android:layout_x="0dp"
        android:layout_y="204dp"
        android:hint="URL IMAGE" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAjoutReference"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_input_add"
        android:layout_column="5"
        android:layout_row="16"
        android:layout_width="103dp"
        android:layout_height="88dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView_AjoutProduit"
        android:layout_alignEnd="@+id/textView_AjoutProduit"
        android:layout_x="190dp"
        android:layout_y="331dp"
        android:background="@android:color/holo_blue_bright"
        app:backgroundTint="@android:color/holo_green_dark"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:id="@+id/imageButton"
        android:layout_x="290dp"
        android:layout_y="215dp"
        android:contentDescription="bouton pour lancer l&apos;appareil photo " />

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:id="@+id/imageButton2"
        android:layout_x="290dp"
        android:layout_y="135dp"
        android:adjustViewBounds="true"
        android:contentDescription="bouton pour lancer le lecteur de code barre" />


</AbsoluteLayout>
